{
    "manifest_version": 3,
    "name": "Polyglotter",
    "description": "Learn a new language with Polyglotter! This extension helps you learn a new language by providing translations and definitions for words and phrases you encounter while browsing the web.",
    "version": "1.0.0",
    "action" : {
        "default_title": "Polyglotter",
        "default_icon" : "icon-128.png"
    },
    "side_panel": {
        "default_path": "sidePanel.html"
    },
    "permissions": ["tabs", "scripting", "sidePanel", "storage"],
    "icons": {
        "16" : "icon-16.png",
        "32" : "icon-32.png",
        "48" : "icon-48.png",
        "128" : "icon-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}